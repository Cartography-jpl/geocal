#! /usr/bin/env python
#
# This sets up a RasterImage into a shelve.

from geocal import *

version = "October 29, 2013"
usage='''Usage: 
  shelve_image [options] <image> <output>
  shelve_image [options] --subset <start_line> <start_sample>
      <number_line> <number_sample> <image> <output>
  shelve_image -h | --help
  shelve_image -v | --version

This program is used to setup a image as a sqlite shelve object. The
output should be in the "file:key" format, e.g., "my_data.db:image".

Options:
  -h --help         
       Print this message

  -b --band=b
       Band of file to use (1 based). [default: 1]

  --average=n
       Average nxn to get a single pixel - useful for taking high resolution
       data to lower resolution.

  --from-shelve
       Instead of getting image from a file, get it from a shelve object.
       This should be in a "file:key" format. This might be useful if
       you use further options such as --subset.

  --force-map-info=f
        Force the given mapinfo to be applied to the image. Only works
        for VICAR files.

  --multi-band
        Specify this is the image is actually multiple bands.  

  --scale=f
        Scale the data by the given factor.

  --subset  start_line start_sample number_line number_sample
       Subset the image.

  -v --version      
       Print program version
'''

args = docopt_simple(usage, version=version)

if(args.from_shelve):
    img = read_shelve(args.image)
elif(args.multi_band):
    # Leverage off of VicarImageGroundConnection, even though we don't care
    # about the rpc.
    if(VicarImageGroundConnection.is_vicar_file(args.image)):
        img = VicarImageGroundConnection(args.image, SimpleDem()).image_multi_band
        if(not img):
            img = RasterImageMultiBandVariable()
            img.add_raster_image(VicarLiteRasterImage(args.image))
    else:
        img = GdalMultiBand(args.image)
elif VicarLiteFile.is_vicar_file(args.image):
    if(args.force_map_info):
        mi = read_shelve(args.force_map_info)
        img = VicarLiteRasterImage(args.image, mi, args.band)
    else:
        img = VicarLiteRasterImage(args.image, args.band)
else:
    img = GdalRasterImage(args.image, args.band)
if(args.start_line):
    if(isinstance(img, RasterImageMultiBand)):
        img = SubRasterImageMultiBand(img, args.start_line, args.start_sample,
                                      args.number_line, args.number_sample)
    else:
        img = SubRasterImage(img, args.start_line, args.start_sample,
                             args.number_line, args.number_sample)

if(args.average):
    if(isinstance(img, RasterImageMultiBand)):
        raise RuntimeError("We don't support averaging yet for RasterImageMultiBand")
    else:
        img = RasterAveraged(img, args.average, args.average)
if(args.scale):
    if(isinstance(img, RasterImageMultiBand)):
        img = ScaleImageMultiBand(img, args.scale)
    else:
        img = ScaleImage(img, args.scale)

write_shelve(args.output, img)



